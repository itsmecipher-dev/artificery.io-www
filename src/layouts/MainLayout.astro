---
import BaseLayout from './BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

interface Props {
  title: string
  description: string
  ogImage?: string
  ogType?: string
  jsonLd?: Record<string, unknown>
}

const { title, description, ogImage, ogType, jsonLd } = Astro.props
---

<BaseLayout title={title} description={description} ogImage={ogImage} ogType={ogType} jsonLd={jsonLd}>
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex flex-col">
    <Header />

    <main class="flex-1">
      <div class="container mx-auto px-4 py-8 max-w-5xl">
        <slot />
      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>
