---
import BrandName from './BrandName.astro'

const year = new Date().getFullYear()
---

<footer class="border-t border-slate-700/50 bg-slate-900/50">
  <div class="container mx-auto px-4 py-6 max-w-5xl">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-slate-400 text-sm">
      <p>&copy; {year} <BrandName />. All rights reserved.</p>
      <div class="flex gap-4">
        <a href="/legal" class="hover:text-white transition-colors">Legal Notice</a>
        <a href="/privacy" class="hover:text-white transition-colors">Privacy</a>
      </div>
    </div>
  </div>
</footer>
