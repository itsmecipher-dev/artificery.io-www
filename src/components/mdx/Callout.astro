---
interface Props {
  type?: 'info' | 'warning' | 'success' | 'error'
}

const { type = 'info' } = Astro.props

const styles = {
  info: {
    bg: 'bg-blue-900/30 border-blue-700',
    iconColor: 'text-blue-400',
    icon: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
  },
  warning: {
    bg: 'bg-yellow-900/30 border-yellow-700',
    iconColor: 'text-yellow-400',
    icon: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>',
  },
  success: {
    bg: 'bg-green-900/30 border-green-700',
    iconColor: 'text-green-400',
    icon: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
  },
  error: {
    bg: 'bg-red-900/30 border-red-700',
    iconColor: 'text-red-400',
    icon: '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
  },
}

const style = styles[type]
---

<div class={`flex gap-3 p-4 rounded-lg border ${style.bg} my-4`}>
  <span class={`shrink-0 mt-0.5 ${style.iconColor}`} set:html={style.icon} />
  <div class="text-slate-300 text-sm">
    <slot />
  </div>
</div>
